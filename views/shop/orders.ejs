    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
           <%if(order.length<=0){%>
               <h1>Nothing in the Orders!</h1>

            <%}else{%>
                <%order.forEach(order=>{%>
                      
                        <form action ="/delete-order" method ="POST"> 
                                <input type ="hidden" value="<%=order._id%>" name ="orderId">
                                <button class="btn danger" type="submit" value="<%=order._id%>" style="position: absolute; right:0;">x</button>
                        <!-- <button >x</button>  -->
                </form>
                        <h1>#<%=order._id%></h1>
                            <%order.items.forEach(product=>{%>
                               <h2>Title: <%=product.title%></h2>
                               <h2>price:<%=product.price%></h2>
                                  <ul>quantity: <%=product.quantity%></ul>
                                <%})%>
                                <hr>
                        <%})%>
                       
                        <button class="btn danger" type="submit" >CheckOut</button> 
                        
                <%}%>
               
        </main>
        <%- include('../includes/end.ejs') %>